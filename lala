#include "struct.h"

int choixcapa(Combattant perso, Combattant equipe1[3], Combattant equipe2[3] ){
	int n=0;
	printf(" veuillez selectionner une des 3 capacites");
	scanf("%d",&n);
	srand(TIME(NULL));
	switch (n)
		case 1;
			if (perso.ID == 1001){
				if(coldown(perso)!=0){{
					perso.vit=perso.vit-15;	
					perso.agl=parso.agl*1.15
					perso.def=perso.def*1.5	
				}
				return 5001;
			}
			else{
				printf("cette capacites ne peux pas etre utilisé");
				return choixcapa(perso);
			}
			
		case 2;
			if(coldown(perso)!=0){
				if (perso.ID == 1001){
				perso.atk=perso.atk*1.25
				perso.dex=perso.dex*1.25
				perso.vit=perso.vit*1.25
				}
				return 5002;
			}
			else{
				printf("cette capacites ne peux pas etre utilisé");
				return choixcapa(perso);
			}
		case 3;
			if(coldown(perso)!=0){
				if (perso.ID == 1001){
				perso.atk= perso.atk*120 + perso.atk*(rand()%21)
				int n=choixcible(Combattant equipe1[3], Combattant equipe2[3]);
				}
				effet(Combattant);
				return 5003;
			}
			else{
				printf("cette capacites ne peux pas etre utilisé");
				return choixcapa(perso);
			}
			
}
int choixcible(Combattant equipe1[3], Combattant equipe2[3]) {
    int choix=-1;
    int tab[6]
    for(int i=0; 3; i++) {
        tab[i]=equipe1[i];
    }
    for (int i=0; i<3; i++) {
        tab[i+3]=equipe2[i];
    }
    
    for (int i=0; i<0; i++){
    	if(IDmax(tab[6], 6)==equipe1[i]){
    	
    	printf("veuillez choisir une cible : \n");
    	printf("veuillez entrer 0 pour choisir %s, 1 pour %s, 2 pour %s", equipe1[0].IDpeso.nom, equipe1[1].IDperso.nom, equipe1[2].IDperso.nom);
    	scanf("%d", %choix);
    	return equipe[choix].ID;
    	}
    else if(IDmax(tab[6], 6)==equipe2[i]){
    	
    	printf("veuillez choisir une cible : \n");
    	printf("veuillez entrer 0 pour choisir %s, 1 pour %s, 2 pour %s", equipe1[0].IDpeso.nom, equipe1[1].IDperso.nom, equipe1[2].IDperso.nom);
    	scanf("%d", %choix);
    	return equipe[choix].ID;
    	}
    }
}



